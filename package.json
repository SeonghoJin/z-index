{
    "name": "z-index-manager",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "description": "A utility library for managing z-index values in web applications",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "README.md"
    ],
    "scripts": {
        "tailwind": "pnpm --filter @z-index/tailwind-extend",
        "core": "pnpm --filter @z-index/core",
        "build": "pnpm -r build",
        "test": "pnpm -r test",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "z-index",
        "css",
        "frontend",
        "utility"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@rollup/plugin-terser": "^0.4.4",
        "@rollup/plugin-typescript": "^11.1.6",
        "@types/node": "^20.11.24",
        "rollup": "^4.9.6",
        "rollup-plugin-dts": "^6.1.0",
        "typescript": "^5.3.3"
    },
    "peerDependencies": {
        "typescript": ">=4.0.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/yourusername/z-index-manager.git"
    },
    "bugs": {
        "url": "https://github.com/yourusername/z-index-manager/issues"
    },
    "homepage": "https://github.com/yourusername/z-index-manager#readme"
}